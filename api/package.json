    "@types/passport-facebook": "^2.1.10",
    "@types/passport-twitter": "^1.0.36",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.16.0",
